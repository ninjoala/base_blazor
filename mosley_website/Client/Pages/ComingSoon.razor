@page "/ComingSoon"
@inherits MosleyComponentBase;
@inject NavigationManager NavigationManager
@using Microsoft.AspNetCore.Components.WebAssembly.Hosting
@inject IWebAssemblyHostEnvironment HostEnvironment

<div class="coming-soon">
    <img src="/images/Band_logo_mockup.png">
    <h1>Welcome to the Mosley Bands Website</h1>
    <div>Mosleybands.com is currently under development and will be available soon!</div>
    @if (HostEnvironment.IsDevelopment() || HostEnvironment.IsStaging())
    {
        <input class=login-button type="password" @bind="PasswordEntry" /><button class="login-button" @onclick=@(async () => await SignIn())>I wanna see</button>
        
    }
</div>


@code {
    [CascadingParameter]
    public MainLayout Layout { get; set; }

    public string PasswordEntry { get; set; }
    public string Password { get; set; } = "GoMosleyBands!";
    public bool Passed { get; set; }

    public async Task SignIn()
    {
        if(PasswordEntry == Password)
          Layout.Authorize();
    }
}